<!DOCTYPE html>
<html>
  <head>
    <title>ViewedRecorder</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width,initial-scale=1">

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.3.1.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js"></script>
  </head>

  <body>

    <div class="header navbar navbar-expand-lg navbar-light">
      <div class="container">
        <div class="header-logo">
          <%= link_to("Viewed Recorder", "/", class:"navbar-brand")%>
        </div>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar-sample">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbar-sample">
          <ul class="header-list navbar-nav">
            <li class="nav-item">
              <%= link_to("Top", "/", class:"nav-link")%>
            </li>
            <li class="nav-item">
              <%= link_to("投稿一覧", "/posts/index", class:"nav-link")%>
            </li>
            <li class="nav-item">
              <%= link_to("新規投稿", "/posts/new", class:"nav-link")%>
            </li>
          </ul>
        </div>

      </div>
    </div>

    <%= yield %>
  </body>
</html>
